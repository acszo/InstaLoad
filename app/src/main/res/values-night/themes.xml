<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.InstaLoad" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="android:windowBackground">@color/black</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:textColor">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
    </style>

    <style name="splashscreentheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:windowBackground">@drawable/splashscreen_black</item>
        <item name="android:statusBarColor">@color/black</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

    <style name="PopupAnimation">
        <item name="android:windowEnterAnimation">@anim/zoom_in</item>
        <item name="android:windowExitAnimation">@anim/zoom_out</item>
    </style>

    <style name="Ripple" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="colorControlHighlight">#33FFFFFF</item>
    </style>

    <style name="AppSearchView" parent="Widget.AppCompat.SearchView" >
        <!-- Query Text Color -->
        <item name="android:textColorPrimary">@color/btn_color</item>
        <!-- Hint Color -->
        <item name="android:textColorHint">@color/btn_color</item>
        <!-- Icon Color -->
        <item name="android:tint">@color/btn_color</item>
    </style>

</resources>